}

/* BAO TH∆Ø */
.envelope {
  width: 420px;
  height: 290px;
  background: #ffffff;
  border-radius: 18px;
  position: relative;
  cursor: pointer;
  box-shadow: 0 24px 45px rgba(0,0,0,0.22);
  transition: transform 0.6s ease;
  z-index: 2;
}

.envelope:hover {
  transform: scale(1.04);
}

/* N·∫ÆP TH∆Ø */
.flap {
  position: absolute;
  inset: 0;
  background: #ffe5ec;
  clip-path: polygon(0 0, 100% 0, 50% 62%);
  transform-origin: top;
  transition: transform 1s ease;
  z-index: 3;
}

/* TR√ÅI TIM */
.heart {
  position: absolute;
  top: 95px;
  left: 50%;
  transform: translateX(-50%);
  font-size: 24px;
  color: #ff8fab;
  z-index: 4;
  transition: opacity 0.5s ease;
}

/* TH∆Ø */
.letter {
  position: absolute;
  inset: 18px;
  background: #ffffff;
  border-radius: 16px;
  padding: 24px;
  opacity: 0;
  transform: translateY(30px);
  transition: 1s ease;
  overflow-y: auto;
  font-size: 15.8px;
  line-height: 1.8;
  white-space: pre-line;
}

/* SCROLLBAR */
.letter::-webkit-scrollbar {
  width: 6px;
}
.letter::-webkit-scrollbar-thumb {
  background: #ffd6e0;
  border-radius: 10px;
}

/* M·ªû TH∆Ø */
.open .flap {
  transform: rotateX(180deg);
}
.open .letter {
  opacity: 1;
  transform: translateY(0);
}
.open .heart {
  opacity: 0;
}

.hint {
  position: absolute;
  bottom: 32px;
  font-size: 14px;
  color: #555;
  z-index: 2;
}
</style>
