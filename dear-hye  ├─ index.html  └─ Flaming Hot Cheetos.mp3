<script>
function openLetter() {
  const env = document.querySelector(".envelope");
  const music = document.getElementById("bgm");

  env.classList.add("open");

  music.volume = 0;
  music.play();

  let v = 0;
  const fade = setInterval(() => {
    v += 0.02;
    if (v >= 0.45) {
      clearInterval(fade);
      v = 0.45;
    }
    music.volume = v;
  }, 120);
}
</script>
