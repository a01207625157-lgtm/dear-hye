/* HOA R∆†I */
.falling {
  position: absolute;
  width: 7px;
  height: 7px;
  border-radius: 50%;
  opacity: 0.8;
  animation: fall linear infinite;
}

@keyframes fall {
  from { transform: translateY(-10vh) rotate(0deg); }
